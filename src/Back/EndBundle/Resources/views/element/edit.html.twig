{% extends 'base.html.twig' %}

{% block body %}

    <div class="box-header with-border">
        <h3 class="box-title">Element edit</h3>
        <ul class="list-unstyled" style="float:right;">
            <li style="float: left;padding-right: 5px;">
                <a href="{{ path('element_index') }}"class="btn btn-default">Back to the list</a>
            </li>

            <li style="float: left;">{{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-warning">
                {{ form_end(delete_form) }}</li>
        </ul>
    </div>


    <div class="container-fluid" style="padding-top: 10px">
        {{ form_start(edit_form) }}
        <div class="form-group row">
            <div class="col-md-2 col-md-offset-2">
                {{ form_label(edit_form.name) }}
            </div>
            <div class="col-md-5">
                {{ form_errors(edit_form.name) }}
                {{ form_widget(edit_form.name) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2 col-md-offset-2">
                {{ form_label(edit_form.abbr) }}
            </div>
            <div class="col-md-5">
                {{ form_errors(edit_form.abbr) }}

                {{ form_widget(edit_form.abbr) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2 col-md-offset-2">
                {{ form_label(edit_form.coeff) }}
            </div>
            <div class="col-md-5">
                {{ form_errors(edit_form.coeff) }}

                {{ form_widget(edit_form.coeff) }}
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-2 col-md-offset-2">
                {{ form_label(edit_form.module) }}
            </div>
            <div class="col-md-5">
                {{ form_errors(edit_form.module) }}

                {{ form_widget(edit_form.module) }}
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-2 col-md-offset-4">
                <input type="submit" value="Create" class="btn btn-primary btn-lg"/>
            </div>
        </div>
        {{ form_end(edit_form) }}
    </div>

{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
    <div class="box-header with-border">
        <h3 class="box-title">Module creation</h3>
        <a href="{{ path('module_index') }}" class="btn btn-default" style="float: right;">Back to the list</a>
    </div>

    <div class="container-fluid" style="padding-top: 10px">
        {{ form_start(form) }}
        <div class="form-group row">
            <div class="col-md-2 col-md-offset-2">
                {{ form_label(form.name, null, {'label':'Nom'}) }}
            </div>
            <div class="col-md-5">
                {{ form_widget(form.name, {'attr': {'type':'text','class':'form-control','placeholder':'Enter...' }}) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2 col-md-offset-2">
                {{ form_label(form.abbr, null, {'label':'Abbréviation'}) }}
            </div>
            <div class="col-md-5">
                {{ form_widget(form.abbr, {'attr': {'type':'text','class':'form-control','placeholder':'Enter...' }}) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2 col-md-offset-2">
                {{ form_label(form.elementNbr, null, {'label':'Nombre des élements'}) }}
            </div>
            <div class="col-md-5">
                {{ form_widget(form.elementNbr, {'attr': {'type':'text','class':'form-control','placeholder':'Enter...' }}) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2 col-md-offset-4">
                <input type="submit" value="Create" class="btn btn-primary btn-lg"/>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

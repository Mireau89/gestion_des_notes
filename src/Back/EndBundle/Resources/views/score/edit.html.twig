{% extends 'base.html.twig' %}

{% block body %}

    <div class="box-header with-border">
        <h3 class="box-title">Score edit</h3>
        <ul class="list-unstyled" style="float:right;">
            <li style="float: left;padding-right: 5px;">
                <a href="{{ path('score_index') }}"class="btn btn-default">Back to the list</a>
            </li>

            <li style="float: left;">{{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-warning">
                {{ form_end(delete_form) }}</li>
        </ul>
    </div>

<div class="container" style="padding-top: 10px;">
    {{ form_start(edit_form) }}
    <div class="form-group row">
        <div class="col-md-2 col-md-offset-2">
            {{ form_label(edit_form.testScore, null, {'label':'Note'}) }}
        </div>
        <div class="col-md-5">
            {{ form_widget(edit_form.testScore, {'attr': {'type':'text','class':'form-control','placeholder':'Enter...' }}) }}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-2 col-md-offset-4">
            <input type="submit" value="Edit" class="btn btn-primary btn-lg"/>
        </div>
    </div>
    {{ form_end(edit_form) }}
</div>

{% endblock %}

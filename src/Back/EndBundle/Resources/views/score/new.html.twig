{% extends 'base.html.twig' %}

{% block body %}

    <div class="box-header with-border">
        <h3 class="box-title">Score creation</h3>
        <a href="{{ path('score_index') }}" class="btn btn-default" style="float: right;">Back to the list</a>
    </div>

    <div class="container-fluid" style="padding-top: 10px">
        {{ form_start(form) }}
        <div class="form-group row">
            <div class="col-md-2 col-md-offset-2">
                {{ form_label(form.testScore) }}
            </div>
            <div class="col-md-5">
                {{ form_errors(form.testScore) }}
                {{ form_widget(form.testScore) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2 col-md-offset-2">
                {{ form_label(form.student) }}
            </div>
            <div class="col-md-5">
                {{ form_errors(form.student) }}
                {{ form_widget(form.student) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2 col-md-offset-2">
                {{ form_label(form.element) }}
            </div>
            <div class="col-md-5">
                {{ form_errors(form.element) }}
                {{ form_widget(form.element) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2 col-md-offset-4">
                <input type="submit" value="Create" class="btn btn-primary btn-lg"/>
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
    <div class="box-header with-border">
        <h3 class="box-title">Students list</h3>
        <a href="{{ path('student_new') }}" class="btn btn-default" style="float: right;">Add a new student</a>
    </div>


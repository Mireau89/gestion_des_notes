{% extends 'base.html.twig' %}

{% block body %}
    <div class="box-header with-border">
        <h3 class="box-title">Student creation</h3>
        <a href="{{ path('student_index') }}" class="btn btn-default" style="float: right;">Back to the list</a>
    </div>

    <div class="container" style="padding-top: 10px;">
        {{ form_start(form) }}
        <div class="form-group row">
            <div class="col-md-2 col-md-offset-2">
                {{ form_label(form.insCode) }}
            </div>
            <div class="col-md-5">
                {{ form_errors(form.insCode) }}

                {{ form_widget(form.insCode) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2 col-md-offset-2">
                {{ form_label(form.firstName) }}
            </div>
            <div class="col-md-5">

                {{ form_errors(form.firstName) }}
                {{ form_widget(form.firstName) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2 col-md-offset-2">
                {{ form_label(form.lastName) }}
            </div>
            <div class="col-md-5">
                {{ form_errors(form.lastName) }}
                {{ form_widget(form.lastName) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2 col-md-offset-2">
                {{ form_label(form.age) }}
            </div>
            <div class="col-md-5">
                {{ form_errors(form.age) }}
                {{ form_widget(form.age) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2 col-md-offset-2">
                {{ form_label(form.gender) }}
            </div>
            <div class="col-md-5">
                {{ form_errors(form.gender) }}
                {{ form_widget(form.gender) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2 col-md-offset-4">
                <input type="submit" value="Edit" class="btn btn-primary btn-lg"/>
            </div>

        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}

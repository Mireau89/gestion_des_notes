{% extends 'base.html.twig' %}

{% block body %}
    <div class="box-header with-border">
        <h3 class="box-title">Student creation</h3>
       <a href="{{ path('student_index') }}" class="btn btn-default" style="float: right;">Back to the list</a>
    </div>

    <div class="container" style="padding-top: 10px">
        {{ form_start(form) }}
        <div class="form-group row">
            <div class="col-md-2 col-md-offset-2">
                {{ form_label(form.insCode, null, {'label':'Code Inscription'}) }}
            </div>
            <div class="col-md-5">
                {{ form_widget(form.insCode, {'attr': {'type':'text','class':'form-control','placeholder':'Enter...' }}) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2 col-md-offset-2">
                {{ form_label(form.firstName, null, {'label':'First Name'}) }}
            </div>
            <div class="col-md-5">
                {{ form_widget(form.firstName, {'attr': {'type':'text','class':'form-control','placeholder':'Enter...' }}) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2 col-md-offset-2">
                {{ form_label(form.lastName, null, {'label':'Last Name'}) }}
            </div>
            <div class="col-md-5">
                {{ form_widget(form.lastName, {'attr': {'type':'text','class':'form-control','placeholder':'Enter...' }}) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2 col-md-offset-2">
                {{ form_label(form.age, null, {'label':'Age'}) }}
            </div>
            <div class="col-md-5">
                {{ form_widget(form.age, {'attr': {'type':'text','class':'form-control','placeholder':'Enter...' }}) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2 col-md-offset-2">
                {{ form_label(form.gender, null, {'label':'Gender'}) }}
            </div>
            <div class="col-md-5">
                {{ form_widget(form.gender, {'attr': {'type':'text','class':'form-control','placeholder':'Enter...' }}) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2 col-md-offset-4">
                <input type="submit" value="Create" class="btn btn-primary btn-lg"/>
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
